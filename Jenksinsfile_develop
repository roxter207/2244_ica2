pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }
    
        stage('Build and run docker image') {
            steps {
                sh 'sudo docker build -t snehakaimal27/2244_ica2:latest .'
                sh "sudo docker tag snehakaimal27/2244_ica2:latest roxter207/2244_ica2:develop-${env.BUILD_ID}" 
                sh 'sudo docker run -d -p 8081:80 snehakaimal27/2244_ica2:latest'
            } 
        }


        stage('Build and Push') {
            steps {
                echo 'Building..'
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-auth', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh '''
                            sudo docker login -u ${USERNAME} -p ${PASSWORD}
                            sudo docker push snehakaimal27/2244_ica2:latest
                        '''
                        sh "sudo docker push snehakaimal27/2244_ica2:develop-${env.BUILD_ID}"
                    }
            }
        }

        stage('testing') {
            steps {
                sh 'curl -I 192.168.142.1:8081'
            }
        }

    
    }
}
