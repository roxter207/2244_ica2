pipeline {
    agent any // Specifies the pipeline can run on any available agent
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }

        stage('Build and Run Docker Image') {
            steps {
                sh 'docker stop dev-container || true && docker rm dev-container || true'
                sh 'docker build -t snehakaimal27/2244_ica2 .'
                sh "docker tag snehakaimal27/2244_ica2 snehakaimal27/2244_ica2:develop-${env.BUILD_ID}"
                sh 'docker run -d --name dev-container -p 8081:80 snehakaimal27/2244_ica2'
            }
        }

        stage('Test Container') {
            steps {
                sh 'curl -I http://localhost:8081'
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-auth', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh '''
                        docker login -u ${USERNAME} -p ${PASSWORD}
                        docker push snehakaimal27/2244_ica2
                        docker push snehakaimal27/2244_ica2:develop-${env.BUILD_ID}
                    '''
                }
            }
        }
    }
}
